 Future<Directory> _createFolder()async{
    final folderName="StockTaking";
    final path= Directory("storage/emulated/0/$folderName");
    if ((await path.exists())){
      // TODO:
      print("exist");
    }else{
      // TODO:
      print("not exist");
      path.create();
    }
    return path;
  }
